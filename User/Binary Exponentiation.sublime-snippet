	<content><![CDATA[
ll binpow(ll a, ll b,ll m)
{
	ll result = 1;
	while (b)
	{
		if (b & 1) result = (result*a)%m;
		a = (a*a)%m;
		b /= 2;       // b>>=1;
	}
	return result;
}
]]></content>
